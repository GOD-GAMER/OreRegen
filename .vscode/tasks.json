{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OreRegen Plugin",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "package"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$javac"],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Maven: package",
            "type": "shell",
            "command": "mvn",
            "args": ["package"],
            "group": "build",
            "problemMatcher": ["$javac"]
        }
    ]
}
